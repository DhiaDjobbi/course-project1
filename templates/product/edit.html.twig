{% extends 'base.html.twig' %}

{% block title %}Edit Product
{% endblock %}

{% block body %}

	<div class="container mt-5 mb-5">


		{{ form_start(form) }}
		<fieldset>
			<legend>Modifer Product</legend>


			<div class="form-group">
				<label>Product Name</label>
				{{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder':'Enter Product Name'}}) }}
			</div>


			<div class="form-group">
				<label>Product price</label>
				{{ form_widget(form.price, {'attr': {'class': 'form-control',
                 'placeholder':'Enter Product Price','min':1}}) }}
			</div>

			<div class="form-group">
				<label>Expire At</label>
				{{ form_widget(form.expireAt, {'attr': {'class': 'form-control'}}) }}
			</div>

			<a href="{{ path('product_index') }}" class="btn btn-info">Back to list</a>
			<button type="submit" class="btn btn-primary">Edit</button>
		</fieldset>
		{{ form_end(form) }}


	</div>

{% endblock %}





















